@using CoreKatmanlıProjeModels
@model IEnumerable<Departmanlar>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2> Departman List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Departmanlar" asp-action="Create" class="btn btn-primary">
                <span>Yeni Departman</span>
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered table-striped my-2">
            <thead>
               <tr>
                   <th>
                       Departman Adı
                   </th>
                    <th>
                       Calisan Sayısı
                   </th>
                   <th>

                   </th>
               </tr>
            </thead>
            <tbody>
                @foreach(var Departmanlar in Model)
                {
                    <tr>
                        <td>
                            @Departmanlar.DepartmanAd
                        </td>
                        <td>
                            @Departmanlar.ToplamCalisan
                        </td>
                        <td>
                            <a asp-controller="Departmanlar" asp-action="Edit" asp-route-id="@Departmanlar.DepartmanId" class="btn btn-primary">Edit</a>
                            <a asp-controller="Departmanlar" asp-action="Delete" asp-route-id="@Departmanlar.DepartmanId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
